# AlphaOmega Environment Configuration
# Copy this file to .env and configure for your system

# ============================================================================
# GPU Configuration (AMD MI50 + RX 6600XT)
# ============================================================================
# Set these to match your GPU IDs from 'rocm-smi --showid'
OLLAMA_GPU_0=0          # MI50 #1 - Vision (LLaVA)
OLLAMA_GPU_1=1          # MI50 #2 - Reasoning/Code
COMFYUI_GPU=2           # MI50 #3 - Image Generation
DISPLAY_GPU=3           # RX 6600XT - Display only

# ROCm Configuration
HSA_OVERRIDE_GFX_VERSION=9.0.0  # MI50 compatibility (gfx906)

# ============================================================================
# Ollama Configuration
# ============================================================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_KEEP_ALIVE=-1    # Keep models loaded in memory

# Model Selection
VISION_MODEL=llava:34b
REASONING_MODEL=mistral
CODE_MODEL=codellama:13b

# Multi-GPU Endpoints
OLLAMA_VISION_PORT=11434    # GPU 0
OLLAMA_REASON_PORT=11435    # GPU 1

# ============================================================================
# OpenWebUI Configuration
# ============================================================================
OPENWEBUI_PORT=3000
OPENWEBUI_DATA=./openwebui_data
WEBUI_AUTH=false        # Set to true for production

# ============================================================================
# Agent-S Configuration (Computer Use)
# ============================================================================
AGENT_S_PORT=8001
AGENT_SAFE_MODE=true    # Require confirmation for risky actions
SCREENSHOT_DIR=/tmp/agent_screenshots
AGENT_LOG_LEVEL=INFO

# X11/Wayland Display
DISPLAY=:0
WAYLAND_DISPLAY=wayland-0

# ============================================================================
# ComfyUI Configuration
# ============================================================================
COMFYUI_HOST=http://localhost:8188
COMFYUI_PORT=8188
COMFYUI_OUTPUT_DIR=./comfyui_bridge/output

# Default Workflows
COMFYUI_DEFAULT_WORKFLOW=sdxl_default

# ============================================================================
# MCP Server Configuration (mcpart integration)
# ============================================================================
MCP_SERVER_PORT=8002
MCP_SERVER_URL=http://localhost:8002
MCP_ARTIFACT_DIR=/tmp/mcp_artifacts

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/alphaomega.log
PIPELINE_LOG_FILE=logs/pipeline.log
AGENT_LOG_FILE=logs/agent_actions.log
MCP_LOG_FILE=logs/mcp.log

# ============================================================================
# Performance Tuning
# ============================================================================
# Memory limits per model (in GB)
LLAVA_MEMORY_LIMIT=40
MISTRAL_MEMORY_LIMIT=8
CODELLAMA_MEMORY_LIMIT=8

# Screenshot preprocessing
SCREENSHOT_MAX_WIDTH=1280
SCREENSHOT_MAX_HEIGHT=720

# ============================================================================
# Security Settings
# ============================================================================
# Allowed actions for Agent-S
AGENT_ALLOW_FILE_WRITE=false
AGENT_ALLOW_SYSTEM_COMMANDS=false
AGENT_ALLOW_APP_LAUNCH=true

# File operation restrictions
AGENT_ALLOWED_PATHS=/tmp,/home/stacy/Downloads

# ============================================================================
# Development Settings
# ============================================================================
DEBUG_MODE=false
SAVE_DEBUG_IMAGES=false
VISION_DEBUG=false
