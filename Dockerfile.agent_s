# Agent-S Dockerfile
# Computer use automation with X11/Wayland support
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    scrot \
    xdotool \
    x11-apps \
    libx11-dev \
    libxtst-dev \
    libpng-dev \
    python3-tk \
    python3-dev \
    gcc \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY agent_s/ /app/agent_s/
COPY config/ /app/config/

# Create necessary directories
RUN mkdir -p /tmp/agent_screenshots /app/logs

# Set environment
ENV PYTHONUNBUFFERED=1
ENV DISPLAY=:0

# Expose port
EXPOSE 8001

# Run server
CMD ["python", "-m", "agent_s.server"]
